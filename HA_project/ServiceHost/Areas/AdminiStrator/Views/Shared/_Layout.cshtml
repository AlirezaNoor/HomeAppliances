
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="keywords" content="Coderthemes">

    <link rel="shortcut icon" href="images/favicon_1.ico">

    <title>@ViewData["Title"]|لوازم خانگی</title>

    <!-- Base Css Files -->
    <link href="~/Administrator/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Icons -->
    <link href="~/Administrator/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Administrator/assets/ionicon/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Administrator/assets/css/material-design-iconic-font.min.css" rel="stylesheet">

    <!-- animate css -->
    <link href="~/Administrator/assets/css/animate.css" rel="stylesheet" />

    <!-- Waves-effect -->
    <link href="~/Administrator/assets/css/waves-effect.css" rel="stylesheet">
    <link href="~/Administrator/assets/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />

    <!-- sweet alerts -->
    <link href="~/Administrator/assets/assets/sweet-alert/sweet-alert.min.css" rel="stylesheet">

    <!-- Custom Files -->
    <link href="~/Administrator/assets/css/helper.css" rel="stylesheet" type="text/css" />
    <link href="~/Administrator/assets/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Administrator/assets/css/persian-datepicker.min.css" rel="stylesheet" type="text/css" />

    <script src="~/Administrator/assets/js/modernizr.min.js"></script>

</head>

<body class="fixed-left">

    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        <div class="topbar">
            <!-- LOGO -->
            <div class="topbar-left">
                <div class="text-center">
                    <a href="index.html" class="logo"><i class="md md-terrain"></i> <span>Moltran </span></a>
                </div>
            </div>
            <!-- Button mobile view to collapse sidebar menu -->
            <div class="navbar navbar-default" role="navigation">
                <div class="container">
                    <div class="">
                        <div class="pull-left">
                            <button class="button-menu-mobile open-right">
                                <i class="fa fa-bars"></i>
                            </button>
                            <span class="clearfix"></span>
                        </div>
                        <form class="navbar-form pull-left" role="search">
                            <div class="form-group">
                                <input type="text" class="form-control search-bar" placeholder="Type here for search...">
                            </div>
                            <button type="submit" class="btn btn-search"><i class="fa fa-search"></i></button>
                        </form>

                    
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->
        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">
                <div class="user-details">
                    <div class="pull-right">
                        <img src="~/Administrator/assets/images/users/avatar-1.jpg" alt="" class="thumb-md img-circle">
                    </div>
                    <div class="user-info">
                        <div class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">جان دو<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="javascript:void(0)"><i class="md md-face-unlock"></i> Profile<div class="ripple-wrapper"></div></a></li>
                                <li><a href="javascript:void(0)"><i class="md md-settings"></i> Settings</a></li>
                                <li><a href="javascript:void(0)"><i class="md md-lock"></i> Lock screen</a></li>
                                <li><a href="javascript:void(0)"><i class="md md-settings-power"></i> Logout</a></li>
                            </ul>
                        </div>

                        <p class="text-muted m-0">مدیریت سیستم</p>
                    </div>
                </div>
                <!--- Divider -->
                <div id="sidebar-menu">
                    <ul>
                        <li>
                            <a href="index.html" class="waves-effect active"><i class="md md-home"></i><span> داشبورد </span></a>
                        </li>
                        <li>
                            <a asp-area="AdminiStrator" asp-controller="Inventory" asp-action="Index" class="waves-effect active"><i class="md md-2x fa fa-dropbox"></i><span> انبار </span></a>
                        </li>

                        <li class="has_sub">
                            <a class="waves-effect"><i class="md md-mail"></i><span> فروشگاه  </span><span class="pull-right"><i class="md md-add"></i></span></a>
                            <ul class="list-unstyled">
                                <li><a asp-area="AdminiStrator" asp-controller="Productcategory" asp-action="Index">کتگوری ها</a></li>
                                <li><a  asp-area="AdminiStrator" asp-controller="Slider" asp-action="Index">اسلایدر</a></li>
                                <li><a asp-area="AdminiStrator" asp-controller="Product" asp-action="Index">محصولات</a></li>
                                <li><a asp-area="AdminiStrator" asp-controller="ProductPicture" asp-action="Index">عکس محصولات</a></li>


                            </ul>
                        </li>
                        
                        <li class="has_sub">
                            <a class="waves-effect"><i class="md md-add-shopping-cart"></i><span> تخفیفات  </span><span class="pull-right"><i class="md md-add"></i></span></a>
                            <ul class="list-unstyled">
                                <li><a asp-area="AdminiStrator" asp-controller="CustomerDiscount" asp-action="Index">تخفیفات مشتری</a></li>
                                <li><a  asp-area="AdminiStrator" asp-controller="ColleagueDiscount" asp-action="Index">تخفیفات همکار</a></li>

                            </ul>
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">

                    @RenderBody()

                </div> <!-- container -->

            </div> <!-- content -->

            <footer class="footer text-right">
                2015 © Moltran.
            </footer>

        </div>





    </div>
    <!-- END wrapper -->
    <div class="modal" tabindex="-1" role="dialog" id="form-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>


    <!-- jQuery  -->
    <script src="~/Administrator/assets/js/jquery.min.js"></script>
    <script src="~/Administrator/assets/js/bootstrap.min.js"></script>
    <script src="~/Administrator/assets/js/waves.js"></script>
    <script src="~/Administrator/assets/js/wow.min.js"></script>
    <script src="~/Administrator/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/Administrator/assets/js/jquery.scrollTo.min.js"></script>
    <script src="~/Administrator/assets/jquery-sparkline/jquery.sparkline.min.js"></script>
    <script src="~/Administrator/assets/jquery-detectmobile/detect.js"></script>
    <script src="~/Administrator/assets/fastclick/fastclick.js"></script>
    <script src="~/Administrator/assets/jquery-slimscroll/jquery.slimscroll.js"></script>
    <script src="~/Administrator/assets/jquery-blockui/jquery.blockUI.js"></script>


    <!-- sweet alerts -->
    <script src="~/Administrator/assets/sweet-alert/sweet-alert.min.js"></script>
    <script src="~/Administrator/assets/sweet-alert/sweet-alert.init.js"></script>

    <!-- flot Chart -->
    <script src="~/Administrator/assets/flot-chart/jquery.flot.js"></script>
    <script src="~/Administrator/assets/flot-chart/jquery.flot.time.js"></script>
    <script src="~/Administrator/assets/flot-chart/jquery.flot.tooltip.min.js"></script>
    <script src="~/Administrator/assets/flot-chart/jquery.flot.resize.js"></script>
    <script src="~/Administrator/assets/flot-chart/jquery.flot.pie.js"></script>
    <script src="~/Administrator/assets/flot-chart/jquery.flot.selection.js"></script>
    <script src="~/Administrator/assets/flot-chart/jquery.flot.stack.js"></script>
    <script src="~/Administrator/assets/flot-chart/jquery.flot.crosshair.js"></script>
    <script src="~/Administrator/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/Administrator/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Modal/modals.js"></script>
<script src="Administrator/jquery-validation/dist/jquery.validate.min.js" ></script>
<script src="Administrator/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" ></script>



    <!-- Counter-up -->
    <script src="~/Administrator/assets/counterup/waypoints.min.js" type="text/javascript"></script>
    <script src="~/Administrator/assets/counterup/jquery.counterup.min.js" type="text/javascript"></script>

    @RenderSection("Scripts",false)
    <!-- CUSTOM JS -->
    <script src="~/Administrator/assets/js/jquery.app.js"></script>

    <!-- Dashboard -->
    <script src="~/Administrator/assets/js/jquery.dashboard.js"></script>



    

<!-- Todo -->
<script src="~/Administrator/assets/js/jquery.todo.js"></script>
<script src="~/Administrator/assets/js/persian-date.min.js"></script>
<script src="~/Administrator/assets/js/persian-datepicker.min.js"></script>
<script>
    $('.persianDateInput').persianDatepicker({
        format: 'YYYY/MM/DD',
        autoClose: true,
        initialValueType: "persian"
    });
</script>



</body>
</html>