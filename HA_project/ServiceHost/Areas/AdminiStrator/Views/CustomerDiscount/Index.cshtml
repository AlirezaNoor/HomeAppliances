@section Scripts {
    <link href="~/Administrator/assets/css/persian-datepicker.min.css" rel="stylesheet" type="text/css" />

<script src="~/Administrator/assets/datatables/jquery.dataTables.min.js"></script>
<script src="~/Administrator/assets/datatables/dataTables.bootstrap.js"></script>


<script src="~/Modal/modals.js"></script>
    <script>
        $(document).ready(function () {
            $('#datatable').dataTable();
        });



    </script>
    <script>
        $('.persianDateInput').persianDatepicker({
            format: 'YYYY/MM/DD',
            autoClose: true,
            initialValueType: "persian"
        });
    </script>
}