@model ServiceHost.Areas.AdminiStrator.Models.Discounts.CustomerDiscountModel
   @ViewData["Title"] = "مدیریت تخفیفات ";

}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["Title"]</h4>
        <p class="pull-left">
        <button class="btn btn-success btn-lg" onclick="showInPopup('@Url.Action("sendTodatabase","CustomerDiscount",null,Context.Request.Scheme)', 'New Productcategory')">ایجاد  محصول جدید</button>
       </p>
    </div>
</div>



<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست تخفیفات|@Model.List.Count تخفیف</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12" id="view-all">

        @Html.Partial("_ViewAll",Model);

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*============================================*@
