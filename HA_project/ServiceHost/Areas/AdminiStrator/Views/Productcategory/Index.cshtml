@model ServiceHost.Areas.AdminiStrator.Models.ProductCategory.ProductCategoryView
@{
    ViewData["Title"] = "مدیریت دسته یندی ها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["Title"]</h4>
        <p class="pull-left">
            <button class="btn btn-success btn-lg" id="btnclick" type="button" >ایجاد گروه محصول جدید</button>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در گروه محصولات</h3>
            </div>
            <div class="panel-body">

            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست گروه محصولات</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>عکس</th>
                                <th>نام</th>
                                <th>تاریخ تولید</th>
                                <th>عملیات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.ProductCategory)
                            {
                                <tr>
                                    <td> </td>
                                    <td>
                                        <img src="@item.Picture" style="width: 70px; height: 70px" />
                                    </td>
                                    <td> @item.Title</td>
                                    <td> @item.Crationdate</td>
                                    <td>
                                        <a class="btn btn-warning pull-right m-rl-5 edit" asp-action="Editeds" asp-route-id="@item.Id">
                                            <i class="fa fa-edit" ></i> ویرایش
                                        </a>
                                    </td>
                                </tr>

                            }
                           
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*============================================*@
<!-- Modal -->
<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">   @await Component.InvokeAsync("Modalcreate");</div>
 
</div>




@*===================================================*@

@section Scripts {
  
    <script src="~/Administrator/assets/js/site.js" ></script>
    <script src="~/Administrator/assets/js/bootstrap.min.js" ></script>
    <script src="~/Administrator/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Administrator/assets/datatables/dataTables.bootstrap.js"></script>
    
    <script>
        $(document).ready(function () {
            $('#datatable').dataTable();
        });

        $(document).ready(function() {
            $("#btnclick").click(function() {
                $("#login").modal('show');
            });
            $("HidebtnModal").click(function() {
                $("#login").modal('hide');
            });
        });

    </script>
} 
