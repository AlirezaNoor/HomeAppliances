@model ServiceHost.Areas.AdminiStrator.Models.ProductCategory.ProductCategoryView

<table id="datatable" class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>#</th>
        <th>عکس</th>
        <th>نام</th>
        <th>تاریخ تولید</th>
        <th>عملیات</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ProductCategory)
    {
        <tr>
            <td> </td>
            <td>
                <img src="@item.Picture" style="width: 70px; height: 70px" />
            </td>
            <td> @item.Title</td>
            <td> @item.Crationdate</td>
            <td>
                <a onclick="showInPopup('@Url.Action("Editeds","Productcategory",new {id=item.Id},Context.Request.Scheme)', 'Update Transaction')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
            </td>
        </tr>

    }
                           
    </tbody>
</table>

