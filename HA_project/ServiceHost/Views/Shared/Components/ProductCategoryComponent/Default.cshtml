@model List<_01_Query.Productcategory.Contracts.ProductCategoryQueryModels >
<!--====================  category area ====================-->
<div class="category-area section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  category wrapper  =======-->
                <div class="category-wrapper">
                    <div class="row row-10 masonry-category-layout">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-sm-6 grid-item">
                                <!--=======  single category item  =======-->
                            <div class="single-category-item">
                                    <div class="single-category-item__image" >
                                        <a asp-action="Dtails" asp-route-id="@item.Slug">
                                            <img src="@item.Picture" alt="@item.Alt" title="@item.ImageTitle" width="357px" height="249px">
                                        </a>
                                    </div>
                                    <div class="single-category-item__content">
                                        <h3 class="title">@item.Title</h3>
                                        <a  asp-route-id="@item.Slug">
                                            <i class="ion-android-arrow-dropleft-circle"></i> خرید کنید
                                        </a>
                                    </div>
                                </div>
                                <!--=======  End of single category item  =======-->
                        </div>
                        }

                    </div>


                </div>
            </div>
            <!--=======  End of category wrapper  =======-->
        </div>
    </div>
</div>

<!--====================  End of category area  ====================-->
